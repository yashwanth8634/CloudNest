<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Register - CloudNest</title>
  <meta name="description" content="Create your free CloudNest account to securely store and manage your files in the cloud.">
  <link rel="icon" type="image/x-icon" href="/favicon.ico">
  <meta property="og:image" content="/favicon.ico">
  <meta property="og:title" content="Register - CloudNest">
  <meta property="og:description" content="Create your free CloudNest account to securely store and manage your files in the cloud.">
  <meta property="og:type" content="website">
  <meta name="twitter:card" content="summary">

  <!-- Gilroy Font -->
  <link href="https://fonts.cdnfonts.com/css/gilroy-bold" rel="stylesheet">

  <!-- Tailwind -->
  <script src="https://cdn.tailwindcss.com"></script>

  <style>
    body { font-family: 'Gilroy-Bold', sans-serif; }
  </style>
</head>
<body class="bg-gradient-to-br from-indigo-50 via-white to-purple-50 min-h-screen flex items-center justify-center">

  <!-- Card -->
  <div class="w-full max-w-md bg-white/80 backdrop-blur-xl shadow-xl rounded-2xl p-8">
    <div class="flex justify-center mb-4">
      <img src="/favicon.ico" alt="CloudNest Logo" class="h-10 w-20">
    </div>
    <h2 class="text-3xl font-bold text-center text-gray-800 mb-8">
      Create your <span class="text-indigo-600">CloudNest</span> account
    </h2>

    <% if (error && error.length > 0) { %>
      <div class="bg-red-100 border border-red-400 text-red-700 px-4 py-3 rounded-lg relative mb-4 text-center" role="alert">
        <span class="block sm:inline"><%= error %></span>
      </div>
    <% } %>


    <form action="/user/register" method="POST" class="space-y-5">
      <!-- Name -->
      <div>
        <label class="block text-sm font-medium text-gray-700 mb-1">Username</label>
        <input type="text" name="username" placeholder="john"
          class="w-full px-4 py-3 rounded-xl border border-gray-300 focus:ring-2 focus:ring-indigo-500 focus:outline-none" required>
      </div>

      <!-- Email -->
      <div>
        <label class="block text-sm font-medium text-gray-700 mb-1">Email Address</label>
        <input type="email" name="email" placeholder="john.doe@example.com"
          class="w-full px-4 py-3 rounded-xl border border-gray-300 focus:ring-2 focus:ring-indigo-500 focus:outline-none" required>
      </div>

      <!-- Password -->
      <div>
        <label class="block text-sm font-medium text-gray-700 mb-1">Password</label>
        <input type="password" name="password" placeholder="********"
          class="w-full px-4 py-3 rounded-xl border border-gray-300 focus:ring-2 focus:ring-indigo-500 focus:outline-none" required>
      </div>

      <!-- Submit -->
      <button type="submit"
        class="w-full py-3 bg-gradient-to-r from-indigo-600 to-purple-600 text-white font-semibold rounded-xl shadow-lg hover:opacity-90 transition">
        Register
      </button>
    </form>

    <!-- Footer links -->
    <p class="text-center text-sm text-gray-600 mt-6">
      Already have an account? 
      <a href="/user/login" class="text-indigo-600 font-medium hover:underline">Login</a>
    </p>
  </div>

</body>
</html>